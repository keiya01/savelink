{
  "name": "savelink",
  "version": "0.0.1",
  "main": "server.ts",
  "license": "MIT",
  "scripts": {
    "start": "npx ts-node",
    "start:hot-reload": "npx ts-node-dev src/index.ts",
    "build": "npx tsc",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "eslint",
        "git add"
      ]
    },
    "ignore": [
      "dist/*.js"
    ]
  },
  "dependencies": {
    "@types/pg": "^7.4.14",
    "eslint": "^5.16.0",
    "global": "^4.3.2",
    "pg": "^7.10.0",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/node": "^11.13.8",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.32"
  }
}
